                required
              >
                {harvesters.map(h => (
                  <option key={h.id} value={h.id}>
                    {h.name}
                  </option>
                ))}
              </select>
              {selectedHarvesterInfo && (
                <p className="text-sm text-gray-500 mt-2">
                  {selectedHarvesterInfo.description}
                </p>
              )}
            </div>

            {/* URL principale */}
            <div className="mb-4">
              <label className="block text-sm font-medium text-gray-700 mb-2">
                URL principale du site <span className="text-red-500">*</span>
              </label>
              <input
                type="url"
                name="url"
                value={formData.url}
                onChange={(e) => {
                  handleInputChange(e);
                  // Auto-remplir le nom du site depuis l'URL
                  if (!formData.site_name && e.target.value) {
                    try {
                      const hostname = new URL(e.target.value).hostname;
                      const siteName = hostname.replace('www.', '').split('.')[0];
                      setFormData(prev => ({
                        ...prev,
                        site_name: siteName.charAt(0).toUpperCase() + siteName.slice(1)
                      }));
                    } catch (err) {
                      // URL invalide, on ignore
                    }
                  }
                }}
                placeholder="https://example.com"
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                required
              />
            </div>

            {/* Nom du site */}
            <div className="mb-4">
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Nom du site <span className="text-red-500">*</span>
              </label>
              <input
                type="text"
                name="site_name"
                value={formData.site_name}
                onChange={handleInputChange}
                placeholder="Nom utilis√© pour le r√©pertoire de stockage"
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                required
              />
              <p className="text-xs text-gray-500 mt-1">
                Auto-rempli depuis l'URL, mais modifiable
              </p>
            </div>

            {/* Nombre de documents √† extraire */}
            <div className="mb-4">
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Nombre de documents √† extraire
              </label>
              <input
                type="number"
                name="max_results"
                value={formData.max_results}
                onChange={handleInputChange}
                min="1"
                placeholder="Laisser vide pour tout extraire"
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
              />
              <p className="text-xs text-gray-500 mt-1">
                Si vide : extrait tous les documents accessibles
              </p>
            </div>

            {/* Nom de la collection */}
            <div className="mb-4">
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Nom de la collection
              </label>
              <input
                type="text"
                name="collection_name"
                value={formData.collection_name}
                onChange={handleInputChange}
                placeholder="Ex: 2024, publications, documents..."
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
              />
              <p className="text-xs text-gray-500 mt-1">
                Sous-r√©pertoire de stockage. Si vide, documents stock√©s √† la racine du site
              </p>
            </div>

            {/* Num√©ros de d√©but et fin */}
            <div className="grid grid-cols-2 gap-4 mb-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Num√©ro de d√©but
                </label>
                <input
                  type="number"
                  name="start_number"
                  value={formData.start_number}
                  onChange={handleInputChange}
                  min="1"
                  placeholder="Optionnel"
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Num√©ro de fin
                </label>
                <input
                  type="number"
                  name="end_number"
                  value={formData.end_number}
                  onChange={handleInputChange}
                  min="1"
                  placeholder="Optionnel"
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>
            </div>

            <CollapsibleSection title="‚öôÔ∏è Param√®tres techniques" bgColor="bg-gray-50" defaultOpen={false}>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Workers parall√®les
                  </label>
                  <input
                    type="number"
                    name="workers"
                    value={formData.workers}
                    onChange={handleInputChange}
                    min="1"
                    max="10"
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Timeout (secondes)
                  </label>
                  <input
                    type="number"
                    name="timeout"
                    value={formData.timeout}
                    onChange={handleInputChange}
                    min="10"
                    max="300"
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    D√©lai entre requ√™tes (s)
                  </label>
                  <input
                    type="number"
                    name="delay_between"
                    value={formData.delay_between}
                    onChange={handleInputChange}
                    min="0"
                    max="10"
                    step="0.1"
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    D√©lai avant retry (s)
                  </label>
                  <input
                    type="number"
                    name="retry_delay"
                    value={formData.retry_delay}
                    onChange={handleInputChange}
                    min="1"
                    max="30"
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                  />
                </div>
              </div>
            </CollapsibleSection>

            <CollapsibleSection title="üîç Filtres de documents" bgColor="bg-blue-50" defaultOpen={false}>
              <div className="grid grid-cols-2 gap-4 mb-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Date d√©but (optionnel)
                  </label>
                  <input
                    type="date"
                    name="date_start"
                    value={formData.date_start}
                    onChange={handleInputChange}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Date fin (optionnel)
                  </label>
                  <input
                    type="date"
                    name="date_end"
                    value={formData.date_end}
                    onChange={handleInputChange}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                  />
                </div>
              </div>

              <div className="mb-4">
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Mots-cl√©s dans le titre (optionnel)
                </label>
                <input
                  type="text"
                  name="keywords"
                  value={formData.keywords}
                  onChange={handleInputChange}
                  placeholder="ex: d√©cret, loi, arr√™t√©..."
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 text-sm"
                />
              </div>

              <div className="mb-4">
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Types de fichiers (s√©lection multiple)
                </label>
                <div className="flex flex-wrap gap-2">
                  {['pdf', 'docx', 'xlsx', 'png', 'jpg', 'rtf', 'tex', 'json', 'html', 'txt'].map(type => (
                    <label key={type} className="flex items-center gap-1 px-2 py-1 bg-white border rounded text-sm cursor-pointer hover:bg-gray-50">
                      <input
                        type="checkbox"
                        checked={formData.file_types.includes(type)}
                        onChange={(e) => {
                          const types = e.target.checked 
                            ? [...formData.file_types, type]
                            : formData.file_types.filter(t => t !== type);
                          setFormData(prev => ({ ...prev, file_types: types }));
                        }}
                        className="w-3 h-3"
                      />
                      {type.toUpperCase()}
                    </label>
                  ))}
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Langues (optionnel, s√©lection multiple)
                </label>
                <div className="flex flex-wrap gap-2">
                  {[
                    { code: 'fr', label: 'Fran√ßais' },
                    { code: 'ar', label: 'Arabe' },
                    { code: 'en', label: 'Anglais' },
                    { code: 'other', label: 'Autre' }
                  ].map(lang => (
                    <label key={lang.code} className="flex items-center gap-1 px-3 py-1 bg-white border rounded text-sm cursor-pointer hover:bg-gray-50">
                      <input
                        type="checkbox"
                        checked={formData.languages.includes(lang.code)}
                        onChange={(e) => {
                          const langs = e.target.checked 
                            ? [...formData.languages, lang.code]
                            : formData.languages.filter(l => l !== lang.code);
                          setFormData(prev => ({ ...prev, languages: langs }));
                        }}
                        className="w-3 h-3"
                      />
                      {lang.label}
                    </label>
                  ))}
                </div>
              </div>
            </CollapsibleSection>

            <button
              onClick={startHarvest}
              disabled={isLoading || !formData.url || !formData.site_name}
              className="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-indigo-700 disabled:bg-gray-400 disabled:cursor-not-allowed flex items-center justify-center gap-2 transition-colors"
            >
              {isLoading ? (
                <>
                  <Loader className="w-5 h-5 animate-spin" />
                  Lancement...
                </>
              ) : (
                <>
                  <Play className="w-5 h-5" />
                  Lancer le Moissonnage
                </>
              )}
            </button>
          </div>

          <div className="bg-white rounded-lg shadow-lg p-6">
            <h2 className="text-xl font-semibold text-gray-800 mb-4">
              Statut du Moissonnage
            </h2>

            {currentJob ? (
              <div className="space-y-4">
                <div className="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                  {currentJob.status === 'running' && (
                    <>
                      <Loader className="w-6 h-6 text-blue-500 animate-spin" />
                      <div>
                        <p className="font-medium text-gray-800">En cours...</p>
                        <p className="text-sm text-gray-600">
                          Documents trouv√©s: {currentJob.documents?.length || 0}
                        </p>
                      </div>
                      <button
                        onClick={() => stopHarvest(currentJob.id)}
                        className="mt-3 w-full bg-red-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-red-700 flex items-center justify-center gap-2 transition-colors"
                      >
                        ‚èπÔ∏è Arr√™ter le moissonnage
                      </button>
                    </>
                  )}
                  {currentJob.status === 'completed' && (
                    <>
                      <CheckCircle className="w-6 h-6 text-green-500" />
                      <div>
                        <p className="font-medium text-gray-800">Termin√© !</p>
                        <p className="text-sm text-gray-600">
                          {currentJob.documents?.length || 0} documents trouv√©s
                        </p>
                      </div>
                    </>
                  )}
                  {currentJob.status === 'error' && (
                    <>
                      <XCircle className="w-6 h-6 text-red-500" />
                      <div>
                        <p className="font-medium text-gray-800">Erreur</p>
                        <p className="text-sm text-red-600">{currentJob.error}</p>
                      </div>
                    </>
                  )}
                </div>

                {currentJob.status === 'completed' && currentJob.documents?.length > 0 && (
                  <>
                    <button
                      onClick={() => downloadResults(currentJob.id)}
                      className="w-full bg-green-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-green-700 flex items-center justify-center gap-2 transition-colors"
                    >
                      <Download className="w-5 h-5" />
                      T√©l√©charger les r√©sultats (JSON)
                    </button>

                    <div className="border-t pt-4">
                      <h3 className="font-semibold text-gray-800 mb-2">
                        Aper√ßu des documents
                      </h3>
                      <div className="space-y-2 max-h-64 overflow-y-auto">
                        {currentJob.documents.slice(0, 10).map((doc, idx) => (
                          <div key={idx} className="p-3 bg-gray-50 rounded border border-gray-200">
                            <p className="font-medium text-sm text-gray-800 truncate">
                              {doc.title}
                            </p>
                            <p className="text-xs text-gray-600 truncate">{doc.url}</p>
                            {doc.file_size && (
                              <p className="text-xs text-gray-500">{doc.file_size}</p>
                            )}
                          </div>
                        ))}
                        {currentJob.documents.length > 10 && (
                          <p className="text-sm text-gray-500 text-center">
                            ... et {currentJob.documents.length - 10} autres documents
                          </p>
                        )}
                      </div>
                    </div>
                  </>
                )}
              </div>
            ) : (
              <div className="text-center py-12 text-gray-400">
                <FileText className="w-16 h-16 mx-auto mb-4 opacity-50" />
                <p>Aucun moissonnage en cours</p>
                <p className="text-sm">Configurez et lancez un moissonnage pour commencer</p>
              </div>
            )}
          </div>
            </div>

            <AnalysisSection />

            <div className="bg-white rounded-lg shadow-lg p-6">
              <div className="flex items-center justify-between mb-4">
                <h2 className="text-xl font-semibold text-gray-800">
                  Historique des Moissonnages
                </h2>
                {selectedJobs.length > 0 && (
                  <button
                    onClick={deleteSelectedJobs}
                    className="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 flex items-center gap-2"
                  >
                    üóëÔ∏è Supprimer la s√©lection ({selectedJobs.length})
                  </button>
                )}
              </div>

              {jobs.length > 0 ? (
                <div className="space-y-2">
                  {jobs.slice().reverse().map((job) => (
                    <JobHistoryCard
                      key={job.id}
                      job={job}
                      isSelected={selectedJobs.includes(job.id)}
                      onToggleSelect={toggleJobSelection}
                      onDownload={downloadResults}
                      onViewJson={viewDocumentJson}
                      onDeleteDoc={deleteDocument}
                      selectedDocs={selectedDocuments[job.id] || []}
                      onToggleDoc={toggleDocumentSelection}
                      onToggleAllDocs={toggleAllDocumentsInJob}
                      setSelectedDocForAnalysis={setSelectedDocForAnalysis}
                      setAnalysisJobId={setAnalysisJobId}
                    />
                  ))}
                </div>
              ) : (
                <div className="text-center py-8 text-gray-400">
                  <Calendar className="w-12 h-12 mx-auto mb-3 opacity-50" />
                  <p>Aucun historique</p>
                </div>
              )}
            </div>
          </>
        )}
      </div>
      {selectedDocForAnalysis && (
        <DocumentAnalysisPanel
          document={selectedDocForAnalysis}
          jobId={analysisJobId}
          onClose={() => {
            setSelectedDocForAnalysis(null);
            setAnalysisJobId(null);
          }}
        />
      )}

      <AssistantPanel />
    </div>
  );
}
