import React, { useState, useEffect, useMemo } from 'react';
import AnalysisSection from './components/AnalysisSection';
import AssistantPanel from './components/AssistantPanel';
import CollapsibleSection from './components/CollapsibleSection';
import { FileText, Download, Play, StopCircle, RefreshCw, CheckCircle, XCircle, Loader, Calendar, Trash2, ExternalLink, Info } from 'lucide-react';
import { API_URL } from './config';

export default function DocumentHarvesterApp() {
  const [harvesters, setHarvesters] = useState([]);
  const [selectedHarvester, setSelectedHarvester] = useState('generic');
  const [currentJob, setCurrentJob] = useState(null);
  const [isLoading, setIsLoading] = useState(false);
  const [taskOptions, setTaskOptions] = useState({ collect: true, download: true, analyze: false });
  const [sites, setSites] = useState([]);
  const [sitesLoading, setSitesLoading] = useState(false);
  const [selectedSiteId, setSelectedSiteId] = useState(null);
  const [selectedSiteIds, setSelectedSiteIds] = useState([]);
  const [documentsData, setDocumentsData] = useState({ items: [], total: 0, page: 1, pageSize: 25, collections: [] });
  const [documentsLoading, setDocumentsLoading] = useState(false);
  const [documentFilters, setDocumentFilters] = useState({
    search: '',
    collection: '',
    status: '',
    phase: '',
    startDate: '1962-01-01',
    endDate: new Date().toISOString().split('T')[0],
  });
  const [selectedDocumentIds, setSelectedDocumentIds] = useState([]);
  
  const [formData, setFormData] = useState({
    url: '',
    site_name: '',
    max_results: '',
    collection_name: '',
    extensions: ['.pdf'],
    workers: 2,
    timeout: 60,
    delay_between: 0.5,
    retry_delay: 2,
    // Filtres
    date_start: '1962-01-01',
    date_end: new Date().toISOString().split('T')[0],
    file_types: ['pdf'],
    keywords: '',
    languages: []
  });
  const [showAdvancedParams, setShowAdvancedParams] = useState(false);
  const [showFilters, setShowFilters] = useState(false);

  useEffect(() => {
    fetch(`${API_URL}/harvesters`)
      .then(res => res.json())
      .then(data => setHarvesters(data.harvesters))
      .catch(err => console.error('Erreur:', err));
  }, []);

  // Pr√©-remplir les champs selon le type de moissonneur s√©lectionn√©
  useEffect(() => {
    if (selectedHarvester === 'joradp') {
      const currentYear = new Date().getFullYear().toString();
      const defaultEndDate = new Date().toISOString().split('T')[0];
      setFormData(prev => ({
        ...prev,
        url: 'https://www.joradp.dz',
        site_name: 'JORADP',
        collection_name: currentYear,
        date_start: prev.date_start || '1962-01-01',
        date_end: prev.date_end || defaultEndDate,
        max_results: ''
      }));
    } else if (selectedHarvester === 'generic') {
      const defaultEndDate = new Date().toISOString().split('T')[0];
      setFormData(prev => ({
        ...prev,
        url: '',
        site_name: '',
        collection_name: '',
        date_start: prev.date_start || '1962-01-01',
        date_end: prev.date_end || defaultEndDate,
        max_results: ''
      }));
    }
  }, [selectedHarvester]);

  useEffect(() => {
    loadSitesSummary();
  }, []);

  useEffect(() => {
    if (!selectedSiteId && sites.length > 0) {
      setSelectedSiteId(sites[0].id);
    }
  }, [sites, selectedSiteId]);

  useEffect(() => {
    if (selectedSiteId) {
      loadSiteDocuments({ page: 1 });
    }
  }, [selectedSiteId, documentFilters.search, documentFilters.collection, documentFilters.status, documentFilters.phase, documentFilters.startDate, documentFilters.endDate]);

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({
      ...prev,
      [name]: ['max_results', 'workers', 'timeout'].includes(name)
        ? (value === '' ? '' : parseInt(value, 10))
        : ['delay_between', 'retry_delay'].includes(name)
        ? parseFloat(value)
        : value
    }));
  };

  const startHarvest = async () => {
    setIsLoading(true);
    
    try {
      const payload = {
        harvester_type: selectedHarvester,
        ...formData
      };

      const tasks = ['collect'];
      if (taskOptions.download || taskOptions.analyze) {
        if (!tasks.includes('download')) tasks.push('download');
      }
      if (taskOptions.analyze) {
        if (!tasks.includes('download')) tasks.push('download');
        if (!tasks.includes('analyze')) tasks.push('analyze');
      }
      payload.tasks = tasks;

      const response = await fetch(`${API_URL}/harvest`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      const data = await response.json();
      
      if (data.job_id) {
        const initialPhases = {
          collect: { status: 'running', processed: 0, total: 0 },
          download: { status: tasks.includes('download') ? 'pending' : 'skipped', processed: 0, total: 0 },
          analyze: { status: tasks.includes('analyze') ? 'pending' : 'skipped', processed: 0, total: 0 },
        };
        setCurrentJob({
          id: data.job_id,
          status: 'running',
          phases: initialPhases,
          tasks,
          site_id: selectedSiteId,
        });
        pollJobStatus(data.job_id);
      }
    } catch (error) {
      console.error('Erreur:', error);
      alert('Erreur lors du lancement du moissonnage');
    } finally {
      setIsLoading(false);
    }
  };

  // Fonction pour arr√™ter un moissonnage
  const stopHarvest = async (jobId) => {
    try {
      const response = await fetch(`${API_URL}/harvest/${jobId}/stop`, {
        method: 'POST'
      });
      
      if (response.ok) {
        alert('Demande d\'arr√™t envoy√©e');
        // Recharger le statut
        setTimeout(() => {
          if (currentJob && currentJob.id === jobId) {
            pollJobStatus(jobId);
          }
        }, 1000);
      }
    } catch (error) {
      console.error('Erreur lors de l\'arr√™t:', error);
      alert('Erreur lors de l\'arr√™t du moissonnage');
    }
  };


  const pollJobStatus = async (jobId) => {
    const interval = setInterval(async () => {
      try {
        const response = await fetch(`${API_URL}/harvest/${jobId}`);
        const job = await response.json();
        setCurrentJob(prev => ({
          ...prev,
          ...job,
          phases: job.phases || prev?.phases || {},
        }));

        if (job.status === 'completed' || job.status === 'error') {
          clearInterval(interval);
          loadSitesSummary();
          loadSiteDocuments({ page: 1 });
        }
      } catch (error) {
        clearInterval(interval);
        console.error('Erreur:', error);
      }
    }, 2000);
  };

  const loadSitesSummary = async () => {
    try {
      setSitesLoading(true);
      const response = await fetch(`${API_URL}/sites`);
      const data = await response.json();
      setSites(data.sites || []);
    } catch (error) {
      console.error('Erreur chargement sites:', error);
    } finally {
      setSitesLoading(false);
    }
  };

  const buildDocumentQuery = (overrides = {}) => {
    const page = overrides.page || documentsData.page || 1;
    const pageSize = overrides.pageSize || documentsData.pageSize || 25;
    const params = new URLSearchParams();
    params.set('page', page);
    params.set('page_size', pageSize);
    if (documentFilters.search) params.set('search', documentFilters.search);
    if (documentFilters.collection) params.set('collection', documentFilters.collection);
    if (documentFilters.status) params.set('status', documentFilters.status);
    if (documentFilters.phase) params.set('phase', documentFilters.phase);
    if (documentFilters.startDate) params.set('start_date', documentFilters.startDate);
    if (documentFilters.endDate) params.set('end_date', documentFilters.endDate);
    return { params, page, pageSize };
  };

  const loadSiteDocuments = async (overrides = {}) => {
    if (!selectedSiteId) {
      setDocumentsData((prev) => ({ ...prev, items: [], total: 0 }));
      return;
    }
    const { params, page, pageSize } = buildDocumentQuery(overrides);
    try {
      setDocumentsLoading(true);
      const response = await fetch(`${API_URL}/sites/${selectedSiteId}/documents?${params.toString()}`);
      const data = await response.json();
      setDocumentsData({
        items: data.items || [],
        total: data.total || 0,
        page,
        pageSize,
        collections: data.collections || [],
      });
      setSelectedDocumentIds([]);
    } catch (error) {
      console.error('Erreur chargement documents:', error);
    } finally {
      setDocumentsLoading(false);
    }
  };

  const handleTaskToggle = (task) => {
    setTaskOptions((prev) => {
      const next = { ...prev };
      if (task === 'download') {
        const nextValue = !prev.download;
        next.download = nextValue;
        if (!nextValue) {
          next.analyze = false;
        }
      } else if (task === 'analyze') {
        next.analyze = !prev.analyze;
        if (next.analyze) {
          next.download = true;
        }
      }
      next.collect = true;
      return next;
    });
  };

  const handleSiteRowClick = (site) => {
    setSelectedSiteId(site.id);
    if (site?.base_url) {
      let derivedName = site.base_url;
      try {
        derivedName = new URL(site.base_url).hostname.replace('www.', '');
      } catch (e) {
        // ignore parsing errors
      }
      setFormData((prev) => ({
        ...prev,
        url: prev.url || site.base_url,
        site_name: prev.site_name || derivedName,
      }));
    }
  };

  const toggleSiteSelection = (siteId) => {
    setSelectedSiteIds((prev) =>
      prev.includes(siteId) ? prev.filter((id) => id !== siteId) : [...prev, siteId]
    );
  };

  const deleteSelectedSites = async () => {
    if (selectedSiteIds.length === 0) return;
    if (!window.confirm(`Supprimer ${selectedSiteIds.length} site(s) et toutes leurs donn√©es ?`)) return;
    try {
      for (const id of selectedSiteIds) {
        await fetch(`${API_URL}/sites/${id}`, { method: 'DELETE' });
      }
      setSelectedSiteIds([]);
      if (selectedSiteIds.includes(selectedSiteId)) {
        setSelectedSiteId(null);
      }
      await loadSitesSummary();
      setDocumentsData({ items: [], total: 0, page: 1, pageSize: documentsData.pageSize, collections: [] });
    } catch (error) {
      console.error('Erreur suppression site:', error);
    }
  };

  const toggleDocumentSelection = (docId) => {
    setSelectedDocumentIds((prev) =>
      prev.includes(docId) ? prev.filter((id) => id !== docId) : [...prev, docId]
    );
  };

  const toggleAllDocuments = (checked) => {
    if (checked) {
      setSelectedDocumentIds(documentsData.items.map((doc) => doc.id));
    } else {
      setSelectedDocumentIds([]);
    }
  };

  const deleteSelectedDocuments = async () => {
    if (!selectedSiteId || selectedDocumentIds.length === 0) return;
    if (!window.confirm(`Supprimer ${selectedDocumentIds.length} document(s) s√©lectionn√©(s) ?`)) return;
    try {
      await fetch(`${API_URL}/sites/${selectedSiteId}/documents/delete`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ document_ids: selectedDocumentIds }),
      });
      setSelectedDocumentIds([]);
      loadSiteDocuments({ page: documentsData.page });
      loadSitesSummary();
    } catch (error) {
      console.error('Erreur suppression documents:', error);
    }
  };

  const handleDocumentFilterChange = (field, value) => {
    setDocumentFilters((prev) => ({ ...prev, [field]: value }));
  };

  const handleDocumentPageChange = (page) => {
    loadSiteDocuments({ page });
  };

  const handleDocumentPageSizeChange = (pageSize) => {
    loadSiteDocuments({ page: 1, pageSize });
  };

  const openDocumentOnline = (doc) => {
    if (doc.url) {
      window.open(doc.url, '_blank', 'noopener');
    }
  };

  const openDocumentLocal = (doc) => {
    if (doc.local_path) {
      window.open(`file://${doc.local_path}`);
    }
  };

  const resetDocumentFilters = () => {
    setDocumentFilters({
      search: '',
      collection: '',
      status: '',
      startDate: '1962-01-01',
      endDate: new Date().toISOString().split('T')[0],
    });
  };

  const numberFormatter = new Intl.NumberFormat('fr-FR');

  const aggregatedStats = React.useMemo(() => {
    return sites.reduce(
      (acc, site) => {
        const stats = site.stats || {};
        acc.total += stats.total || 0;
        acc.downloaded += stats.downloaded || 0;
        acc.analyzed += stats.analyzed || 0;
        acc.errors += (stats.analyze_errors || 0) + ((stats.total || 0) - (stats.downloaded || 0));
        return acc;
      },
      { total: 0, downloaded: 0, analyzed: 0, errors: 0 }
    );
  }, [sites]);

  const formatFileSize = (size) => {
    if (!size) return '‚Äî';
    const units = ['octets', 'Ko', 'Mo', 'Go', 'To'];
    let value = size;
    let unitIndex = 0;
    while (value >= 1024 && unitIndex < units.length - 1) {
      value /= 1024;
      unitIndex += 1;
    }
    return `${value.toFixed(value < 10 ? 1 : 0)} ${units[unitIndex]}`;
  };

  const phaseOrder = ['collect', 'download', 'analyze'];
  const phaseLabels = {
    collect: 'Collecte des m√©tadonn√©es',
    download: 'T√©l√©chargement des fichiers',
    analyze: 'Analyse IA',
  };

  const formatPhaseStatus = (status) => {
    switch (status) {
      case 'running':
        return 'En cours';
      case 'completed':
      case 'success':
        return 'Termin√©';
      case 'partial':
        return 'Partiel';
      case 'error':
        return 'Erreur';
      case 'queued':
        return 'En file';
      case 'pending':
        return 'En attente';
      case 'skipped':
        return 'Ignor√©';
      default:
        return status || '‚Äî';
    }
  };

  const getPhaseStatusClasses = (status) => {
    switch (status) {
      case 'completed':
      case 'success':
        return 'bg-green-100 text-green-700';
      case 'running':
      case 'partial':
        return 'bg-blue-100 text-blue-700';
      case 'queued':
      case 'pending':
        return 'bg-amber-100 text-amber-700';
      case 'error':
        return 'bg-red-100 text-red-700';
      case 'skipped':
        return 'bg-gray-200 text-gray-500';
      default:
        return 'bg-gray-200 text-gray-500';
    }
  };

  const docPhaseDotClass = (status) => {
    switch (status) {
      case 'completed':
      case 'success':
        return 'bg-green-500';
      case 'running':
      case 'partial':
        return 'bg-blue-500';
      case 'queued':
      case 'pending':
        return 'bg-amber-500';
      case 'error':
        return 'bg-red-500';
      case 'skipped':
        return 'bg-gray-400';
      default:
        return 'bg-gray-300';
    }
  };

  const formatDateTime = (value) => (value ? new Date(value).toLocaleString('fr-FR') : '‚Äî');

  const formatSiteName = (site) => {
    if (!site?.base_url) return 'Site';
    try {
      return new URL(site.base_url).hostname.replace('www.', '');
    } catch (error) {
      return site.base_url;
    }
  };

  const currentSite = sites.find((site) => site.id === selectedSiteId) || null;
  const totalPages = documentsData.pageSize
    ? Math.max(1, Math.ceil(documentsData.total / documentsData.pageSize))
    : 1;
  const documents = documentsData.items || [];
  const startItem = documentsData.total > 0 ? (documentsData.page - 1) * documentsData.pageSize + 1 : 0;
  const endItem = documentsData.total > 0 ? startItem + documents.length - 1 : 0;
  const isJobRunning = currentJob?.status === 'running';
  const currentJobPhases = currentJob?.phases || {};
  const currentTasks = currentJob?.tasks || [];

  const renderPhaseProgress = (phaseKey, phaseData = {}) => {
    const status = phaseData.status || 'pending';
    const processed = phaseData.processed ?? 0;
    const total = phaseData.total ?? 0;
    const showProgress = total > 0;
    const percentage = showProgress
      ? Math.round((processed / total) * 100)
      : status === 'completed' || status === 'success'
      ? 100
      : 0;

    return (
      <div key={phaseKey} className="space-y-1">
        <div className="flex items-center justify-between text-sm font-medium text-gray-700">
          <span>{phaseLabels[phaseKey] || phaseKey}</span>
          <span className={`text-xs px-2 py-0.5 rounded-full ${getPhaseStatusClasses(status)}`}>
            {formatPhaseStatus(status)}
          </span>
        </div>
        {showProgress && (
          <div className="h-2 bg-gray-200 rounded">
            <div
              className={`h-2 rounded ${status === 'error' ? 'bg-red-500' : 'bg-indigo-500'}`}
              style={{ width: `${Math.min(percentage, 100)}%` }}
            />
          </div>
        )}
        {showProgress && (
          <div className="text-xs text-gray-500">
            {processed} / {total}
          </div>
        )}
      </div>
    );
  };

  const resetDocumentFilters = () => {
    setDocumentFilters({
      search: '',
      collection: '',
      status: '',
      phase: '',
      startDate: '1962-01-01',
      endDate: new Date().toISOString().split('T')[0],
    });
  };

  const numberFormatter = new Intl.NumberFormat('fr-FR');
  const phaseOrder = ['collect', 'download', 'analyze'];
  const phaseLabels = {
    collect: 'Collecte des m√©tadonn√©es',
    download: 'T√©l√©chargement des fichiers',
    analyze: 'Analyse IA',
  };
  const formatPhaseStatus = (status) => {
    switch (status) {
      case 'running':
        return 'En cours';
      case 'completed':
      case 'success':
        return 'Termin√©';
      case 'partial':
        return 'Partiel';
      case 'error':
        return 'Erreur';
      case 'queued':
        return 'En file';
      case 'pending':
        return 'En attente';
      case 'skipped':
        return 'Ignor√©';
      default:
        return status || '‚Äî';
    }
  };
  const getPhaseStatusClasses = (status) => {
    switch (status) {
      case 'completed':
      case 'success':
        return 'bg-green-100 text-green-700';
      case 'running':
      case 'partial':
        return 'bg-blue-100 text-blue-700';
      case 'queued':
      case 'pending':
        return 'bg-amber-100 text-amber-700';
      case 'error':
        return 'bg-red-100 text-red-700';
      case 'skipped':
        return 'bg-gray-200 text-gray-500';
      default:
        return 'bg-gray-200 text-gray-500';
    }
  };
  const docPhaseDotClass = (status) => {
    switch (status) {
      case 'completed':
      case 'success':
        return 'bg-green-500';
      case 'running':
      case 'partial':
        return 'bg-blue-500';
      case 'queued':
      case 'pending':
        return 'bg-amber-500';
      case 'error':
        return 'bg-red-500';
      case 'skipped':
        return 'bg-gray-400';
      default:
        return 'bg-gray-300';
    }
  };
  const formatDateTime = (value) => (value ? new Date(value).toLocaleString('fr-FR') : '‚Äî');
  const formatSiteName = (site) => {
    if (!site?.base_url) return 'Site';
    try {
      return new URL(site.base_url).hostname.replace('www.', '');
    } catch (error) {
      return site.base_url;
    }
  };
  const currentSite = sites.find((site) => site.id === selectedSiteId) || null;
  const totalPages = documentsData.pageSize
    ? Math.max(1, Math.ceil(documentsData.total / documentsData.pageSize))
    : 1;
  const documents = documentsData.items || [];
  const startItem = documentsData.total > 0 ? (documentsData.page - 1) * documentsData.pageSize + 1 : 0;
  const endItem = documentsData.total > 0 ? startItem + documents.length - 1 : 0;

  const renderPhaseProgress = (phaseKey, phaseData = {}) => {
    const status = phaseData.status || 'pending';
    const processed = phaseData.processed ?? 0;
    const total = phaseData.total ?? 0;
    const showProgress = total > 0;
    const percentage = showProgress ? Math.round((processed / total) * 100) : status === 'completed' || status === 'success' ? 100 : 0;

    return (
      <div key={phaseKey} className="space-y-1">
        <div className="flex items-center justify-between text-sm font-medium text-gray-700">
          <span>{phaseLabels[phaseKey] || phaseKey}</span>
          <span className={`text-xs px-2 py-0.5 rounded-full ${getPhaseStatusClasses(status)}`}>
            {formatPhaseStatus(status)}
          </span>
        </div>
        {showProgress && (
          <div className="h-2 bg-gray-200 rounded">
            <div
              className={`h-2 rounded ${status === 'error' ? 'bg-red-500' : 'bg-indigo-500'}`}
              style={{ width: `${Math.min(percentage, 100)}%` }}
            />
          </div>
        )}
        {showProgress && (
          <div className="text-xs text-gray-500">
            {processed} / {total}
          </div>
        )}
      </div>
    );
  };

  const selectedHarvesterInfo = harvesters.find(h => h.id === selectedHarvester);


  const viewDocumentJson = (doc) => {
    const jsonStr = JSON.stringify(doc, null, 2);
    const blob = new Blob([jsonStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    window.open(url, '_blank');
  };

  const renderHeader = () => (
    <div className="bg-white rounded-lg shadow-lg p-6 mb-8">
      <div className="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div className="flex items-center gap-3">
          <FileText className="w-8 h-8 text-indigo-600" />
          <div>
            <h1 className="text-3xl font-bold text-gray-800">
              Moissonneur de Documents
            </h1>
            <p className="text-gray-600">
              Configurez vos collectes, suivez leur progression et g√©rez vos archives en un seul endroit.
            </p>
          </div>
        </div>
        <div className="flex items-center gap-2">
          <button
            onClick={() => {
              loadSitesSummary();
              loadSiteDocuments({ page: 1 });
            }}
            className="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-gray-300 text-sm text-gray-700 hover:bg-gray-100"
          >
            <RefreshCw className="w-4 h-4" />
            Actualiser
          </button>
        </div>
      </div>
      <div className="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div className="border border-gray-200 rounded-lg p-4">
          <p className="text-sm text-gray-500">Sites suivis</p>
          <p className="mt-2 text-2xl font-semibold text-gray-900">{numberFormatter.format(sites.length)}</p>
        </div>
        <div className="border border-gray-200 rounded-lg p-4">
          <p className="text-sm text-gray-500">Documents r√©pertori√©s</p>
          <p className="mt-2 text-2xl font-semibold text-gray-900">
            {numberFormatter.format(aggregatedStats.total)}
          </p>
          <p className="text-xs text-gray-500">{numberFormatter.format(aggregatedStats.downloaded)} t√©l√©charg√©s</p>
        </div>
        <div className="border border-gray-200 rounded-lg p-4">
          <p className="text-sm text-gray-500">Analyses IA</p>
          <p className="mt-2 text-2xl font-semibold text-gray-900">
            {numberFormatter.format(aggregatedStats.analyzed)}
          </p>
          <p className="text-xs text-gray-500">{numberFormatter.format(aggregatedStats.errors)} en attente ou en erreur</p>
        </div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
      <div className="max-w-6xl mx-auto space-y-8">
        {renderHeader()}

        {activeTab === 'archive' ? (
          <ArchiveDashboard />
        ) : (
          <>
            <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <div className="bg-white rounded-lg shadow-lg p-6">
            <h2 className="text-xl font-semibold mb-6 text-gray-800 border-b pb-3">
              Configuration du Moissonnage
            </h2>

            {/* Type de Moissonneur */}
            <div className="mb-4">
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Type de Moissonneur <span className="text-red-500">*</span>
              </label>
              <select
                value={selectedHarvester}
